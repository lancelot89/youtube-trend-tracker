# YouTube Data API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-api-key-here

# Google Cloud Project Configuration
PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
REGION=asia-northeast1          # GCP region for deployment
AR_REPO=youtube-trend-repo      # Artifact Registry repository name
SERVICE_NAME=youtube-trend-tracker # Cloud Run service name
SECRET_NAME=youtube-api-key     # Secret Manager secret name

# Application Settings
GO_ENV=local
MAX_VIDEOS_PER_CHANNEL=200

# BigQuery Configuration
BQ_DATASET=youtube              # BigQuery dataset name
BQ_TABLE_VIDEOS=videos          # BigQuery table for videos
BQ_TABLE_CHANNELS=channels      # BigQuery table for channels
# Uncomment to use BigQuery emulator locally
# BIGQUERY_EMULATOR_HOST=localhost:9060

# Logging
LOG_LEVEL=info

# Server Configuration
PORT=8080